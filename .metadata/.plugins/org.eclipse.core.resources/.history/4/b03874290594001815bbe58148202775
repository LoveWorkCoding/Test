package test;

import java.util.Date;

public class Data {
  private int hour;
  private int minutes;
  private int seconds;
  private int year;
  private int month;
  private int ziua;
  private Date d;

  public Data(int ora, int minute, int secunde, int ziua, int luna, int anul) {
    this.hour = ora;
    this.minutes = minute;
    this.seconds = secunde;
    this.ziua = ziua;
    this.month = luna;
    this.year = anul;
  }

  public Data() {
    this.d = new Date();
  }

  public String timpScurs(Data t1, Data t2) {

    int ora = t1.hour - t2.hour;
    int minute = t1.minutes - t2.minutes;
    int secunde = t1.seconds - t2.seconds;
    int ziua = t1.ziua - t2.ziua;
    int luna = t1.month - t2.month;
    int an = t1.year - t2.year;
    return "Timpul scurs: " + ora + " : " + minute + " : " + secunde + " zile " + ziua + ", luni " + luna + ", ani " + an;
  }

  public Date timpAdaugare() {

    this.d = new Date();
    return d;
  }

  public void setOra(int ora) {
    this.hour = ora;
  }

  public int getOra() {
    return this.hour;
  }

  public void setMinute(int minute) {
    this.minutes = minute;
  }

  public int getMinute() {
    return this.minutes;
  }

  public void setSecunde(int secunde) {
    this.seconds = secunde;
  }

  public int getSecunde() {
    return this.seconds;
  }

  public void setAnul(int anul) {
    this.year = anul;
  }

  public int getAnul() {
    return this.year;
  }

  public void setLuna(int luna) {
    this.month = luna;
  }

  public int getLuna() {
    return this.month;
  }

  public void setZiua(int ziua) {
    this.ziua = ziua;
  }

  public int getZiua() {
    return this.ziua;
  }

  @Override
  public boolean equals(Object d) {
    if (d instanceof Date) {
      Data td = (Data) d;
      if (this.hour == td.getOra() && this.minutes == td.getMinute() && this.seconds == td.getSecunde() && this.year == td.getAnul() && this.month == td.getLuna() && this.ziua == td.getZiua())
        return true;
      else
        return false;
    } else
      return false;
  }

  @Override
  public String toString() {
    return "Data: " + this.year + " luna " + this.month + " ziua " + this.ziua + "\nla ora: " + this.hour + " : " + this.minutes + " : " + this.seconds;
  }

}
